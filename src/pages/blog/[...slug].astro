---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Generate paths for all blog posts
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

// Get the entry directly from the prop
const { entry } = Astro.props;

// Render the content
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <div class="max-w-3xl mx-auto py-8 px-4">
    <article>
      <h1 class="text-4xl font-bold">{entry.data.title}</h1>
      
      <div class="flex items-center flex-wrap space-x-2 my-4 text-gray-600">
        <time datetime={entry.data.pubDate.toISOString()}>
          {new Date(entry.data.pubDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {entry.data.author && (
          <>
            <span>•</span>
            <span>by {entry.data.author}</span>
          </>
        )}
        {entry.data.category && (
          <>
            <span>•</span>
            <a 
              href={`/category/${entry.data.category.toLowerCase()}`} 
              class="text-blue-600 hover:underline"
            >
              {entry.data.category}
            </a>
          </>
        )}
      </div>
      
      {entry.data.image && (
        <img 
          src={entry.data.image} 
          alt={entry.data.title}
          class="rounded-lg my-6 w-full h-auto"
        />
      )}
      
      <div class="prose lg:prose-xl max-w-none my-8">
        <Content />
      </div>
      
      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="mt-8 mb-4">
          <h3 class="text-lg font-medium mb-2">Tags:</h3>
          <div class="flex flex-wrap gap-2">
            {entry.data.tags.map(tag => (
              <a 
                href={`/tag/${tag}`}
                class="px-3 py-1 bg-gray-100 rounded-full text-sm hover:bg-gray-200 transition"
              >
                {tag}
              </a>
            ))}
          </div>
        </div>
      )}
    </article>
  </div>
</Layout>