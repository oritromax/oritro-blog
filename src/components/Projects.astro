---
const projects = [
  {
    title: "Modern Portfolio",
    description: "A sleek, responsive portfolio website built with HTML, CSS, and JavaScript.",
    tags: ["HTML", "CSS", "JavaScript"],
    image: "https://images.pexels.com/photos/5926389/pexels-photo-5926389.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    title: "E-commerce Platform",
    description: "A full-featured online store with product listings, cart functionality, and checkout process.",
    tags: ["React", "Node.js", "MongoDB"],
    image: "https://images.pexels.com/photos/5632402/pexels-photo-5632402.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    title: "Weather Dashboard",
    description: "A weather application that displays current conditions and forecasts based on location.",
    tags: ["Vue", "API Integration", "CSS"],
    image: "https://images.pexels.com/photos/5380664/pexels-photo-5380664.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  }
];
---

<section id="projects" class="section">
  <h2>Projects</h2>
  <div class="projects-grid">
    {projects.map(project => (
      <div class="project-card">
        <div class="project-image">
          <img src={project.image} alt={project.title} loading="lazy" />
        </div>
        <div class="project-content">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="project-tags">
            {project.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          <a href="#" class="project-link">View Project</a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  h2 {
    position: relative;
    display: inline-block;
    margin-bottom: var(--spacing-5);
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 3px;
    background-color: var(--color-accent);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-4);
  }

  .project-card {
    border-radius: var(--border-radius);
    overflow: hidden;
    background-color: var(--color-card-bg);
    border: 1px solid var(--color-border);
    transition: var(--transition-default);
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .project-image {
    height: 200px;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-default);
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: var(--spacing-3);
  }

  .project-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-2);
  }

  .project-content p {
    color: var(--color-text-light);
    font-size: 0.95rem;
    margin-bottom: var(--spacing-2);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-1);
    margin-bottom: var(--spacing-3);
  }

  .tag {
    font-size: 0.8rem;
    padding: 4px 8px;
    border-radius: 4px;
    background-color: var(--color-border);
    color: var(--color-text-light);
  }

  .project-link {
    display: inline-block;
    color: var(--color-accent);
    font-weight: 500;
    position: relative;
  }

  .project-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--color-accent);
    transition: var(--transition-default);
  }

  .project-link:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>