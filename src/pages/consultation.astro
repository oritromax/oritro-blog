---
import Layout from '../layouts/Layout.astro';

const consultationTypes = [
  {
    title: 'Building A Team',
    description: 'Expert guidance on building high-performing engineering teams, from hiring strategies to team structure and culture development.',
    icon: '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>'
  },
  {
    title: 'Software Architecture',
    description: 'Strategic planning and design of scalable software architectures, focusing on maintainability, performance, and future growth.',
    icon: '<path d="m15 12-8.5 8.5c-.83.83-2.17.83-3 0 0 0 0 0 0 0a2.12 2.12 0 0 1 0-3L12 9"/><path d="M17.64 15 22 10.64"/><path d="m20.91 11.7-1.25-1.25c-.6-.6-.93-1.4-.93-2.25v-.86L16.01 4.6a5.56 5.56 0 0 0-3.94-1.64H9l.92.82A6.18 6.18 0 0 1 12 8.4v1.56l2 2h2.47l2.26 1.91"/>'
  },
  {
    title: 'Technical Crisis',
    description: 'Rapid response and strategic solutions for critical technical issues, system outages, and performance bottlenecks.',
    icon: '<path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" x2="12" y1="9" y2="13"/><line x1="12" x2="12.01" y1="17" y2="17"/>'
  },
  {
    title: 'Developing Team Management',
    description: 'Mentoring and guidance for new engineering managers, focusing on leadership skills, process improvement, and team dynamics.',
    icon: '<path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>'
  }
];

const consultationProcess = [
  {
    title: 'Initial Discussion',
    description: 'A 30-minute call to understand your needs and challenges.',
    icon: '<path d="M22 2H2v16h20V2z"/><path d="M22 22H2"/><path d="M12 18v4"/><path d="m9 11 3-3 3 3"/><path d="M12 12v4"/>'
  },
  {
    title: 'Problem Analysis',
    description: 'Deep dive into your specific situation and requirements.',
    icon: '<circle cx="12" cy="12" r="10"/><path d="M8 12h8"/><path d="M12 8v8"/>'
  },
  {
    title: 'Solution Planning',
    description: 'Developing a tailored strategy and action plan.',
    icon: '<path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>'
  },
  {
    title: 'Implementation Support',
    description: 'Ongoing guidance and support during execution.',
    icon: '<path d="M12 20h9"/><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>'
  }
];
---

<Layout title="Consultation - Nidal Siddique Oritro">
  <div class="max-w-4xl mx-auto p-4 lg:p-8">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-3xl lg:text-4xl font-bold mb-4">Expert Software Engineering Consultation</h1>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Leverage my 13+ years of experience to solve your technical challenges and build stronger engineering teams.
      </p>
      <div class="mt-8">
        <a 
          href="/contact"
          class="relative inline-block group"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1 group-hover:rotate-0 transition-all duration-300"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1 group-hover:rotate-0 transition-all duration-300"></div>
          <div class="relative px-6 py-3 bg-gray-800 rounded-xl group-hover:bg-gray-700 transition-colors">
            Schedule a Consultation
          </div>
        </a>
      </div>
    </div>

    <!-- What I Consult About -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8">What I Consult About</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {consultationTypes.map(type => (
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
            <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
            <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
              <div class="flex items-center gap-4 mb-4">
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={type.icon}></svg>
                </div>
                <h3 class="text-xl font-semibold">{type.title}</h3>
              </div>
              <p class="text-gray-400">{type.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- How I Consult -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8">How I Consult</h2>
      <div class="relative">
        <div class="absolute left-8 top-8 h-[calc(100%-4rem)] w-0.5 bg-gray-800"></div>
        <div class="space-y-8">
          {consultationProcess.map((step, index) => (
            <div class="relative pl-16">
              <div class="absolute left-[1.8rem] -translate-x-1/2 flex items-center justify-center w-8 h-8 rounded-full bg-gray-800 text-emerald-400">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={step.icon}></svg>
              </div>
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/10 to-purple-400/10 rounded-xl -rotate-0.5"></div>
                <div class="absolute inset-0 border border-white/10 rounded-xl rotate-0.5"></div>
                <div class="relative bg-gray-800/50 p-6 rounded-xl">
                  <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
                  <p class="text-gray-400">{step.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section>
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/10 to-purple-400/20 rounded-xl -rotate-1"></div>
        <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
        <div class="relative bg-gray-800/50 p-8 rounded-xl text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Transform Your Engineering Team?</h2>
          <p class="text-gray-400 mb-6 max-w-2xl mx-auto">
            Let's work together to solve your technical challenges and build a stronger engineering organization.
          </p>
          <a 
            href="/contact"
            class="inline-block py-3 px-8 bg-emerald-400/10 text-emerald-400 rounded-xl font-medium hover:bg-emerald-400/20 transition-colors"
          >
            Get Started
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
```