---
export interface Props {
  repo?: string;
  repoId?: string;
  category?: string;
  categoryId?: string;
}

const {
  repo = 'oritromax/oritro-blog',
  repoId = 'R_kgDOOrBNvg',
  category = 'General',
  categoryId = 'DIC_kwDOOrBNvs4CuX_C'
} = Astro.props;
---

<div class="giscus-container mt-16 pt-8 border-t border-gray-700">
  <h3 class="text-xl font-semibold mb-6">Comments</h3>
  <script
    src="https://giscus.app/client.js"
    data-repo={repo}
    data-repo-id={repoId}
    data-category={category}
    data-category-id={categoryId}
    data-mapping="title"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme="dark"
    data-lang="en"
    data-loading="lazy"
    crossorigin="anonymous"
    async
  ></script>
</div>

<style>
  .giscus-container {
    max-width: 100%;
  }
</style>