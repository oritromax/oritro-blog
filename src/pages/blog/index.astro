---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Get all blog posts and sort by publication date
const posts = await getCollection('blog');
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="My Blog">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <h1 class="text-4xl font-bold mb-8">My Blog</h1>
    
    <div class="space-y-8">
      {sortedPosts.map(post => (
        <article class="border rounded-lg p-6 shadow-sm hover:shadow-md transition">
          <h2 class="text-2xl font-bold">
            <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
              {post.data.title}
            </a>
          </h2>
          <p class="text-gray-600 mt-2">
            {new Date(post.data.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
            {post.data.author && ` â€¢ by ${post.data.author}`}
          </p>
          {post.data.description && (
            <p class="mt-4">{post.data.description}</p>
          )}
          {post.data.tags && (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.tags.map(tag => (
                <span class="px-2 py-1 bg-gray-100 text-sm rounded-md">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</Layout>