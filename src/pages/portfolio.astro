---
import Layout from '../layouts/Layout.astro';

const experience = [
  {
    period: 'Jan 2025 - Present',
    role: 'Senior Engineering Manager',
    company: 'Cheq, A Cantaloupe Platform',
    description: 'Leading some of best software minds to build highly scalable and extremely resilient software solutions serving millions of customers.'
  },
  {
    period: 'Jan 2021 - Dec 2024',
    role: 'Lead Software Engineer',
    company: 'Montex Marketing LLC',
    description: 'Lead a team of engineers to build and maintain CRM, eCommerce Logistics Solution for wide range of eCommerce verticals.'
  },
  {
    period: 'Feb 2020 - Sep 2020',
    role: 'Engineering Solution Consultant',
    company: 'ResponseCRM',
    description: 'Consulted and Actively perticipated in the development of 3D Secure Payment Gateway and PCI Compliance for ResponseCRMs 200K+ customers.'
  },
  {
    period: 'March 2019 -  Feb 2020',
    role: 'Senior Software Engineer',
    company: 'MonsterAds',
    description: 'Developed a custom CRM for affiliate marketing and lead generation with advanced reporting and analytics features.'
  },
  {
    period: 'Dec 2015 - Dec 2018',
    role: 'Head of Development Operation',
    company: 'United States Transit Funding, Inc',
    description: 'Lead the team to developed a neural network based solution for fleet optimization, cost management, market analysis and route optimization.'
  },
  {
    period: 'Jan 2014 - Dec 2015',
    role: 'Senior Software Engineer',
    company: 'United States Transit Funding, Inc',
    description: 'Developed fleet data integration and reporting systems for large scale fleet management.'
  },
  {
    period: 'Feb 2013 - January 2014',
    role: 'Junior Software Engineer',
    company: 'United States Transit Funding, Inc',
    description: 'Helped developed a large scale fleet tracking system with fuel management and route optimization.'
  }
];

const openSourceProjects = [
  {
    title: 'React Portfolio',
    description: 'A modern react portfolio for those engineers who could not find time to build one.',
    tech: ['React', 'Tailwind'],
    stars: 13,
    forks: 7,
    link: 'https://github.com/oritromax/react-portfolio'
  },
  {
    title: 'Folder 2 Text',
    description: 'A cli tool to turn your project into disgestable context for LLMs',
    tech: ['NodeJS','Javascript', 'CLI'],
    stars: 4,
    forks: 2,
    link: 'https://github.com/oritromax/folder2text'
  },
  {
    title: 'Discord Antispam Bot',
    description: 'A extremely low resource consuming discord bot to protect your server from spam and malicious users',
    tech: ['Go', 'Discord'],
    stars: 3,
    forks: 1,
    link: 'https://github.com/oritromax/antispam-bot'
  }
];
---

<Layout title="Portfolio - Nidal Siddique Oritro">
  <div class="max-w-4xl mx-auto p-4 lg:p-8">
    <!-- About Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-8">Nidal Siddique Oritro</h2>
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Photo Column -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-2xl -rotate-2"></div>
          <div class="absolute inset-0 border-2 border-white/10 rounded-2xl rotate-2"></div>
          <img 
            src="/hero.jpg" 
            alt="Nidal Siddique Oritro"
            class="relative w-full h-full object-cover object-center rounded-2xl"
          />
        </div>
        <!-- About Text Column -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/10 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full flex items-center">
            <div>
              <p class="text-gray-300 leading-relaxed mb-4">
                 Senior Software Engineer with a focus on planning and defining projects. I have worked with companies all over the world to build highly scalable and maintainable system to serve millions of customers. I thrive on challenges and i especially enjoy a project that gives me the opportunity to learn new things. 
              </p>
              <p class="text-gray-300 leading-relaxed mb-4">
                I am specialized in managing small to medium-size development teams from project inception to complete delivery.
              </p>
              <p class="text-gray-300 leading-relaxed">
                On a personal level, i love DIY stuff. Own a 3D Printer, Building my own workshop. 
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Industry Experience -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Industry Experience</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Transportation -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
            <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 16H9m10 0h3v-3.15a1 1 0 0 0-.84-.99L16 11l-2.7-3.6a1 1 0 0 0-.8-.4H5a1 1 0 0 0-1 1v8h3"/><circle cx="6.5" cy="16.5" r="2.5"/><circle cx="16.5" cy="16.5" r="2.5"/></svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Transportation</h3>
            <p class="text-gray-400 text-sm">Fleet management and logistics optimization systems</p>
          </div>
        </div>

        <!-- E-commerce -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
            <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">E-commerce</h3>
            <p class="text-gray-400 text-sm">Scalable online retail and marketplace solutions</p>
          </div>
        </div>

        <!-- Fintech -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
            <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Fintech</h3>
            <p class="text-gray-400 text-sm">Payment processing and financial management, Accounting Solutions</p>
          </div>
        </div>

        <!-- Education -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
            <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Education</h3>
            <p class="text-gray-400 text-sm">Learning management and student tracking</p>
          </div>
        </div>


        <!-- Retail -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
            <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m2 7 4.5-2.5 4 2.5 4.5-2.5 4 2.5L23 5v13l-4 2-4-2-4 2-4-2-4 2-3-1.5V7Z"/><path d="M2 17v-3"/><path d="M19 17v-3"/></svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Retail</h3>
            <p class="text-gray-400 text-sm">Point of sale and inventory systems</p>
          </div>
        </div>
        <!-- CRM -->
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-purple-400/20 rounded-xl -rotate-1"></div>
          <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
          <div class="relative bg-gray-800/50 p-6 rounded-xl h-full hover:bg-gray-800/80 transition-colors">
            <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-emerald-400/10 text-emerald-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m2 7 4.5-2.5 4 2.5 4.5-2.5 4 2.5L23 5v13l-4 2-4-2-4 2-4-2-4 2-3-1.5V7Z"/><path d="M2 17v-3"/><path d="M19 17v-3"/></svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">CRM</h3>
            <p class="text-gray-400 text-sm">Developing cutting edge CRM Solutions</p>
          </div>
        </div>
      </div>

    </section>

    <!-- Experience Timeline -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Experience</h2>
      <div class="relative">
        <div class="absolute left-4 top-0 h-full w-0.5 bg-gray-800"></div>
        {experience.map((job, index) => (
          <div class="relative pl-12 pb-8">
            <div class="absolute left-2 -translate-x-1/2 w-6 h-6 rounded-full border-4 border-gray-800 bg-emerald-400"></div>
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/10 to-purple-400/10 rounded-xl -rotate-0.5"></div>
              <div class="absolute inset-0 border border-white/10 rounded-xl rotate-0.5"></div>
              <div class="relative bg-gray-800/50 p-6 rounded-xl">
                <span class="text-emerald-400 text-sm font-medium">{job.period}</span>
                <h3 class="text-xl font-semibold mt-1">{job.role}</h3>
                <p class="text-gray-400 text-sm mt-1">{job.company}</p>
                <p class="text-gray-300 mt-3">{job.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Tech Stack -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Tech Stack</h2>
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/10 to-purple-400/20 rounded-xl -rotate-1"></div>
        <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
        <div class="relative bg-gray-800/50 p-6 rounded-xl">
          <p class="text-gray-300 leading-relaxed">
            My primary tech stack includes <span class="font-bold text-emerald-400">Go</span>, 
            <span class="font-bold text-emerald-400">JavaScript/TypeScript</span>, and 
            <span class="font-bold text-emerald-400">PHP ( Symfony, Laravel)</span> for backend development. 
            For frontend, I work with <span class="font-bold text-emerald-400">React</span>, 
            <span class="font-bold text-emerald-400">Vue</span>, and 
            <span class="font-bold text-emerald-400">Tailwind CSS</span>. 
            I have extensive experience with <span class="font-bold text-emerald-400">Docker</span>, 
            <span class="font-bold text-emerald-400">Kubernetes</span>, and 
            <span class="font-bold text-emerald-400">AWS</span> for deployment and infrastructure.
          </p>
        </div>
      </div>
    </section>

    <!-- Open Source Projects -->
    <section>
      <h2 class="text-2xl font-bold mb-6">Open Source Projects</h2>
      <div class="grid gap-6">
        {openSourceProjects.map(project => (
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/10 to-purple-400/10 rounded-xl -rotate-1"></div>
            <div class="absolute inset-0 border border-white/10 rounded-xl rotate-1"></div>
            <a href={project.link} target="_blank" rel="noopener noreferrer" 
              class="relative block bg-gray-800/50 rounded-xl p-6 hover:bg-gray-800/80 transition-colors"
            >
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-semibold group-hover:text-emerald-400 transition-colors">
                  {project.title}
                </h3>
                <div class="flex items-center gap-4 text-gray-400">
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                    {project.stars}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M7 7 C7 7 7 5 9 3c2 -2 6 -2 8 0s2 4 0 6c-2 2 -4 1 -4 1"/><path d="M3 21c-2 -2 -2 -6 0 -8s4 -2 6 0s1 4 1 4"/><path d="M21 21c2 -2 2 -6 0 -8s-4 -2 -6 0s-1 4 -1 4"/></svg>
                    {project.forks}
                  </span>
                </div>
              </div>
              <p class="text-gray-300 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.tech.map(tech => (
                  <span class="px-2 py-1 bg-gray-700 text-gray-300 rounded-full text-xs">
                    {tech}
                  </span>
                ))}
              </div>
            </a>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>