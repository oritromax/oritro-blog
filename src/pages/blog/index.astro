---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Get all blog posts and sort by publication date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get all unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];

// Get all unique categories
const allCategories = [...new Set(allPosts.map(post => post.data.category || 'Uncategorized'))];
---

<Layout title="My Blog">
  <div class="max-w-6xl mx-auto py-8 px-4">
    <h1 class="text-4xl font-bold mb-8">My Blog</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar with categories and tags -->
      <aside class="lg:col-span-1">
        <div class="sticky top-8">
          <div class="mb-8">
            <h2 class="text-xl font-bold mb-4">Categories</h2>
            <ul class="space-y-2">
              {allCategories.map(category => (
                <li>
                  <a 
                    href={`/category/${category.toLowerCase()}`}
                    class="hover:text-blue-600 flex justify-between items-center"
                  >
                    <span>{category}</span>
                    <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                      {allPosts.filter(post => post.data.category === category).length}
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <div>
            <h2 class="text-xl font-bold mb-4">Tags</h2>
            <div class="flex flex-wrap gap-2">
              {allTags.map(tag => (
                <a 
                  href={`/tag/${tag}`}
                  class="px-3 py-1 bg-gray-100 rounded-full text-sm hover:bg-gray-200 transition"
                >
                  {tag}
                </a>
              ))}
            </div>
          </div>
        </div>
      </aside>
      
      <!-- Main content - blog posts -->
      <div class="lg:col-span-3">
        <div class="space-y-8">
          {sortedPosts.map(post => (
            <article class="border rounded-lg p-6 shadow-sm hover:shadow-md transition">
              <h2 class="text-2xl font-bold">
                <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                  {post.data.title}
                </a>
              </h2>
              <div class="flex items-center mt-2 text-gray-600">
                <time datetime={post.data.pubDate.toISOString()}>
                  {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                {post.data.author && (
                  <>
                    <span class="mx-2">•</span>
                    <span>by {post.data.author}</span>
                  </>
                )}
                {post.data.category && (
                  <>
                    <span class="mx-2">•</span>
                    <a 
                      href={`/category/${post.data.category.toLowerCase()}`} 
                      class="text-blue-600 hover:underline"
                    >
                      {post.data.category}
                    </a>
                  </>
                )}
              </div>
              {post.data.description && (
                <p class="mt-4">{post.data.description}</p>
              )}
              {post.data.tags && (
                <div class="mt-4 flex flex-wrap gap-2">
                  {post.data.tags.map(tag => (
                    <a 
                      href={`/tag/${tag}`}
                      class="px-2 py-1 bg-gray-100 text-sm rounded-md hover:bg-gray-200"
                    >
                      {tag}
                    </a>
                  ))}
                </div>
              )}
            </article>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>