---

import '../styles/global.css'
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 min-h-screen">
    <header class="bg-blue-600 text-white py-4">
      <div class="max-w-6xl mx-auto px-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold">My Astro Blog</a>
        <nav>
          <ul class="flex space-x-6">
            <li><a href="/" class="hover:underline">Home</a></li>
            <li><a href="/blog" class="hover:underline">Blog</a></li>
            <li><a href="/categories" class="hover:underline">Categories</a></li>
            <li><a href="/tags" class="hover:underline">Tags</a></li>
          </ul>
        </nav>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-gray-100 py-6 mt-auto">
      <div class="max-w-6xl mx-auto px-4 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} My Astro Blog. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>