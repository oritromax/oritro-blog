---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get recent posts
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title="Welcome to My Blog">
  <section class="py-20 bg-gradient-to-b from-blue-600 to-blue-800 text-white">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h1 class="text-5xl font-bold mb-6">Welcome to My Astro Blog</h1>
      <p class="text-xl mb-8">A blog built with Astro, Markdown, and Tailwind CSS</p>
      <a href="/blog" class="inline-block bg-white text-blue-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition">
        Read the Blog
      </a>
    </div>
  </section>
  
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8">Recent Posts</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        {recentPosts.map(post => (
          <article class="border rounded-lg overflow-hidden hover:shadow-md transition">
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2">
                <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                  {post.data.title}
                </a>
              </h3>
              <p class="text-gray-600 text-sm mb-4">
                {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </p>
              {post.data.description && (
                <p class="text-gray-700">{post.data.description}</p>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>